BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_miles
            font_size: 48
            text: '0'
            on_text: app.handle_calculate()
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 1
            # Self-Note: modifies size of box in greater box
            Button:
            # Self-Note: Check if buttons inline with orientation
                text: 'up'
                on_press:app.handle_increment(1)
                # the following line specifies the function in the app class to call when the button is pressed
            Button:
                text: 'down'
                on_press:app.handle_increment(-1)
                # the following line specifies the function in the app class to call when the button is pressed
    BoxLayout:
        orientation: 'horizontal'
        Label:
            id: output_label
            font_size: 48
            text: ''